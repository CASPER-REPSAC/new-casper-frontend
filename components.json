{
  "$schema": "https://ui.shadcn.com/schema.json",
  "style": "default",
  "rsc": true,
  "tsx": true,
  "tailwind": {
    "config": "tailwind.config.ts",
    "css": "app/_styles/global.css",
    "baseColor": "slate",
    "cssVariables": true,
    "prefix": "tw-"
  },
  "iconLibrary": "lucide",
  "aliases": {
    "components": "app/_shadcn/components/ui",
    "utils": "app/_shadcn/lib/utils"
  },
  "registries": {
    "@plate": {
      "url": "https://platejs.org/r/{name}"
    },
    "@react-bits": "https://reactbits.dev/r/{name}.json"
  }
}
